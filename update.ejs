<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Book</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="update-page">
    <div class="container">
        <header>
            <h1> Update Book</h1>
            <a href="/" class="back-link">‚Üê Back to Home</a>
        </header>

        <main>
            <% if (books.length > 0) { %>
                <div class="current-books">
                    <h3> Available Books:</h3>
                    <div class="books-list">
                        <% books.forEach(book => { %>
                            <div class="book-item">
                                <span class="book-info">
                                    <strong>ID: <%= book.id %></strong> - "<%= book.title %>" by <%= book.author %>
                                </span>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <form action="/update" method="POST" class="form-container">
                    <div class="form-group">
                        <label for="bookId">Book ID to Update:</label>
                        <input type="number" id="bookId" name="bookId" required 
                               placeholder="Enter book ID (e.g., 1, 2, 3...)"
                               min="1">
                        <small class="help-text">Choose from the IDs shown above</small>
                    </div>

                    <div class="form-group">
                        <label for="title">New Book Title:</label>
                        <input type="text" id="title" name="title" required
                               placeholder="Enter new book title">
                    </div>

                    <div class="form-group">
                        <label for="author">New Author Name:</label>
                        <input type="text" id="author" name="author" required
                               placeholder="Enter new author name">
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Update Book</button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            <% } else { %>
                <div class="no-books">
                    <p>No books available to update.</p>
                    <a href="/create" class="btn btn-primary">Add a Book First</a>
                    <a href="/" class="btn btn-secondary">Back to Home</a>
                </div>
            <% } %>
        </main>
    </div>
</body>
</html>