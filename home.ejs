<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library - Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="home-page">
    <div class="container">
        <header>
            <h1> Book Library</h1>
            <p class="subtitle">Manage Your Personal Collection</p>
        </header>

        <nav class="nav-buttons">
            <a href="/create" class="btn btn-primary">Add New Book</a>
            <a href="/update" class="btn btn-secondary">Update Book</a>
            <a href="/delete" class="btn btn-danger">Delete Highest ID Book</a>
        </nav>

        <main>
            <h2>All Books</h2>
            <% if (books.length > 0) { %>
                <div class="books-grid">
                    <% books.forEach(book => { %>
                        <div class="book-card">
                            <div class="book-id">ID: <%= book.id %></div>
                            <h3 class="book-title"><%= book.title %></h3>
                            <p class="book-author">by <%= book.author %></p>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="no-books">
                    <p>No books in the library yet. <a href="/create">Add the first book!</a></p>
                </div>
            <% } %>
        </main>
    </div>
</body>
</html>